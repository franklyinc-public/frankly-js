{
  "name": "frankly-js",
  "version": "0.2.1",
  "description": "JavaScript library providing building blocks to write applications using the Frankly API.",
  "main": "index.js",
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/franklyinc/frankly-js"
  },
  "keywords": [
    "Frankly",
    "frankly",
    "Chat",
    "chat",
    "franklyinc",
    "franklychat",
    "browser",
    "realtime",
    "real-time",
    "platform",
    "API",
    "SDK",
    "api",
    "sdk"
  ],
  "author": "Achille Roussel (achille@franklychat.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/franklyinc/frankly-js/issues"
  },
  "homepage": "https://github.com/franklyinc/frankly-js",
  "dependencies": {
    "mpack-js": ">=1.2.0",
    "promise": ">=7.0.1",
    "ws": ">=0.7.2",
    "jws": ">=3.0.0"
  },
  "devDependencies": {
    "browserify": "^10.2.4",
    "jsdoc": "^3.3.0",
    "minami": "^1.1.0",
    "mocha": ">=2.2.5",
    "s3": "^4.4.0",
    "uglify-js": "^2.4.23"
  },
  "scripts": {
    "browserify": "browserify index.js --outfile dist/frankly.js",
    "build": "printf 'Browserify-ing...\n' && npm run browserify && printf 'Minify-ing...\n' && npm run minify",
    "deploy": "npm run build -s && npm run frankly-version | node scripts/s3-upload.js",
    "env": "env",
    "frankly-version": "npm run env | grep 'npm_package_version=' | grep -o '\\d\\+.\\d\\+.\\d\\+'",
    "minify": "uglifyjs dist/frankly.js --compress --mangle --output dist/frankly.min.js --source-map dist/frankly.js.map -p 1 --source-map-url https://s3.amazonaws.com/frankly-js/$(npm run frankly-version)/frankly.js.map",
    "s3-upload": "node scripts/s3-upload.js",
    "test": "mocha --timeout 10000",
    "test-build-deploy": "node scripts/test-build-deploy.js"
  },
  "browser": {
    "./frankly/parent.js": "./frankly/browser/parent.js",
    "./frankly/runtime.js": "./frankly/browser/runtime.js",
    "./frankly/widgets.js": "./frankly/browser/widgets.js",
    "ws": "./frankly/browser/ws.js"
  }
}
